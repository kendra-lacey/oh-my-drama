<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/dramas/new.css" />
<%- include('../partials/nav') %>

<main>
  <% if (user) { %>
  <h1><%= title %></h1>
  <form id="new-form" action="/dramas" method="POST">
    <div>
      <label for="title-input">Title:</label>
      <div ">
        <input type="text" name="title" id="title-input" placeholder="Drama Title" autocomplete="off">
      </div>
    </div>
    <div>
      <label for="language-select" id="language-select">Language:</label>
      <div>
        <select name="language" id="language">
          <option value="Korean">Korean</option>
          <option value="Chinese">Chinese</option>
          <option value="Janpanese">Janpanese</option>
          <option value="Tiawanese">Tiawanese</option>
        </select>
        <button type="submit">Add Drama</button>
      </div>
    </div>
  </form>
  <% } %>
</main>

<%- include('../partials/footer') %>