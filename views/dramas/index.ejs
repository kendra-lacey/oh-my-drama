<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/dramas/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Language</th>
        <th>Average-Rating</th>
        <th><img src="/assets/sun.png" alt="lil cute sun"></th>
      </tr>
    </thead>
    <tbody>
      <% dramas.forEach(drama => { %>
        <tr>
          <td><%= drama.title %></td>
          <td><%= drama.language %></td>
          <td><%= drama.getAverage() %></td>
          <td><a href="/dramas/<%= drama._id %>">DETAILS</a></td>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>