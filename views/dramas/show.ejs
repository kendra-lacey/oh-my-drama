<%- include('../partials/html-head.ejs') %>
<link rel="stylesheet" href="/stylesheets/dramas/show.css" />
<%- include('../partials/nav.ejs') %>

<main>
  <h1><%= title %> </h1>
  <section> 
    <div>Title:</div>
    <div>
      <%= drama.title %>
      <% if (drama.owner) { %>
        <a href="/dramas/<%= drama._id %>/edit">
          <button class="btn">Edit this Drama</button>
        </a>
        <% } %>
    </div>
    <div>Language:</div>
    <div><%= drama.language %></div>
    <div>Rating:</div>
    <div><%= drama.rating %></div>
    <div>Stars:</div>
    <div></div>
    </section>
  <h2>Rate This Drama</h2>
  <form 
  id="add-review-form"
  action="/dramas/<%= drama._id %>/reviews"
  method="POST"
  >
  
  <label for="comment-textarea">Comments:</label>
  <textarea name="comment" id="comment-textarea"></textarea>
  <label for="rating-select">Rating:</label>
  <select name="rating" id="rating-select">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
    <option value="8">8</option>
    <option value="9">9</option>
    <option value="10"selected>10</option>
  </select>
  <button type="submit">Add Review</button>
</form>
  <h2>Reviews üå∂Ô∏è</h2>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Comment</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% drama.reviews?.forEach(review => { %>
        <% total += review.rating %> 
      <tr>
        <td><%= review.reviewer.name %></td>
        <td><%= review.comment %></td>
        <td><%= review.rating %></td>
        <td><% if (review.reviewer.equals(user?.profile)) { %>
          <form 
            action="/dramas/<%= drama._id %>/reviews/<%= review._id %>?_method=DELETE" 
            method="POST"
            class="inline"
          >
            <button class="btn" type="submit">Delete Review</button>
          </form>
          <% } %> 
        </td>
        
      </tr>
      <% }) %> 
  </tbody>
</table>
</main>

<%- include('../partials/footer.ejs') %>